<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1527896573815-b7dd74893deb?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2102&q=80);">
  <div class="container">
    <h1>My Games</h1>
    <p>Power Up Your Wallet</p>
  </div>
</div>
<div class="container">
  <br>
  <%= link_to "Upload a game", new_game_path, class: "btn btn-outline-dark" %>
  <br>
  <%= render 'games/cards' %>


  <div class="rental-inqury row">
    <div class="d-flex flex-column">
      <h1>Rental Inquiry</h1>
      <% @my_rentals.reverse_each do |rental| %>
        <div class="card-product">
          <%= cl_image_tag rental.game.photo.key, height: 200, crop: :fill, class: "card-img-top" %>
          <div class="card-product-infos">
            <h2>
              Request for game <%= rental.game.title %> from <%= rental.start_date %> to <%= rental.end_date %>
            </h2>
            <p>
              <%= link_to "APPROVE".html_safe, approve_game_rental_path(rental.game_id, rental.id,  {status: 'approved'}), method: :put, class: "btn btn-success" %>
              <%= link_to "DECLINE".html_safe, decline_game_rental_path(rental.game_id, rental.id,  {status: 'declined'}), method: :put, class: "btn btn-outline-danger" %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
