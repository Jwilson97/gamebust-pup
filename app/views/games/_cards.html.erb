<div class="container">
  <div class="row-container">
    <div class="row">
      <% @games.each do |game|%>
      <div class="col-12 col-9 col-3">
        <div class="card-trip">
          <%= cl_image_tag game.photo.key, height: 200, crop: :fill, class: "card-img-top" %>
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to game.title, game_path(game.id) %></h2>
              <p><%= game.description %></p>
            </div>
            <h2 class="card-trip-pricing">$<%= game.price %></h2>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
